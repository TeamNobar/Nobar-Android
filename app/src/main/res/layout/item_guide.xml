<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="guideItem"
            type="org.sopt.appzam.nobar_android.data.HomeGuideData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recipe_later_box"
        android:elevation="2dp"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp">


            <ImageView
                android:id="@+id/imageGuide"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="2:1"
                android:layout_marginTop="12dp"
                android:src="@drawable/img_sample"/>

            <TextView
                android:id="@+id/textTastingGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/itemGuide"
                app:layout_constraintTop_toBottomOf="@+id/imageGuide"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="81dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:ems="8"
                android:maxLines="2"
                android:textColor="@color/black"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>