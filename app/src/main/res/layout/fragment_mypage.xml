<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.main.mypage.MypageFragment">
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"
            android:layout_marginStart="24dp"
            android:text="@string/myPageTitle"
            android:textColor="@color/navy000782"
            android:fontFamily="@font/pretendard_extrabold"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/imageSetting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textTitle"
            android:layout_marginEnd="27dp"
            app:layout_constraintBottom_toBottomOf="@id/textTitle"/>

        <TableLayout
            android:id="@+id/tabLayoutMyPage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="19dp"
            android:layout_marginHorizontal="72dp"
            app:layout_constraintTop_toBottomOf="@+id/imageSetting"/>

        <Button
            android:id="@+id/buttonNewNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/myPageButtonNewNote"
            app:layout_constraintTop_toBottomOf="@+id/tabLayoutMyPage"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="@drawable/new_note_box"
            android:elevation="2dp"
            android:textColor="@color/grayA0"
            android:fontFamily="@font/pretendard_medium"
            android:paddingVertical="14dp"
            android:layout_marginTop="36dp"/>


        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonNewNote"
            app:layout_constraintBottom_toBottomOf="parent"/>






    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>